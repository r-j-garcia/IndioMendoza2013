@using IndioMendoza2013.Modelos
@model FiltroAlojamiento

<style type="text/css">

.info 
{
    border: 1px solid;
    margin: 10px 0px;
    padding:10px 5px 10px 5px;
    background-repeat: no-repeat;
    background-position: 10px center;
    color: #9F6000;
    background-color: #FEEFB3;
    text-align:center;
}
</style>

<script language="javascript" type="text/javascript">

    function frmAlojamientos_success() {

    }

    function frmAlojamientos_failure(error) {
        alert($(error.response)[1].innerHTML);
    }

</script>

@using (Ajax.BeginForm("Buscar", "Alojamiento", new AjaxOptions
{
    UpdateTargetId = "divResultados",
    InsertionMode = System.Web.Mvc.Ajax.InsertionMode.Replace,
    OnSuccess = "frmAlojamientos_success",
    OnFailure = "frmAlojamientos_failure"
},
new { id = "frmAlojamientos" }))
{
    <div style="width:100%; height:100%; min-height: 800px;">
    <table width="100%" cellpadding="5px">
    <tr>
        <td><div class="info">Si querés agregar un alojamiento en Gualeguaychú mandanos un mail a <a href="mailto:alojamientos@indiogualeguaychu.com.ar">alojamientos@indiogualeguaychu.com.ar</a></div></td>
    </tr>
    <tr>
        <td>
            <div id="divFiltrosBondisRicoteros" style="height:75px;">
                @Html.Partial("FiltrosAlojamientos", Model)
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <div id="divResultados">@Html.Action("Buscar", "Alojamiento", Model)</div>
        </td>
    </tr>
    </table>
    </div>
}
