                function AplicoFormato(oText) {
                    var aDec = oText.value.split('.');
                    if (aDec.length > 1) {
                        if (aDec[1].length == 1) {
                            oText.value = aDec[0] + '.' + aDec[1].split('.')[0] + '0';
                        }
                        if (aDec[1].length == 0) {
                            oText.value = aDec[0] + '.00';
                        }
                        if (aDec[1].length >= 2) {
                            oText.value = aDec[0] + '.' + aDec[1].substr(0, 2);
                        }
                    }
                    else {
                        oText.value = aDec + '.00';
                    }
