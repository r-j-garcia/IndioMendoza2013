@model IndioMendoza2013.Models.LoginModel
<script language="javascript" type="text/javascript">

    function frmLogin_success(data) {
        if (data) {
            alert('Login Correcto');
            document.location = '@Url.Action( "Index", "Home" )';
        } else {
            alert('Contraseña Incorrecta');
        }
        
    }

    function frmLogin_failure(error) {
        alert($(error.response)[1].innerHTML);
    }

    function frmLogin_submit() {
        $("#frmLogin").submit();
    }

    $(function () {
        $("input[type='button']").button();
    });
</script>
@using (Ajax.BeginForm("Login", "LoginController", new AjaxOptions
{
    OnSuccess = "frmLogin_success",
    OnFailure = "frmLogin_failure"
},
new { id = "frmLogin" }))
{
<div style="text-align:center">
<table width="100%">
<tr>
    <td style="text-align:right; width:50%; vertical-align:middle;">
        Contraseña: @Html.PasswordFor(x => x.Contraseña)
    </td>
    <td style="text-align:left; width:50%;vertical-align:middle;">
        <input type="button" value="Enviar" onclick="javascript:frmLogin_submit();" />
    </td>
</tr>
</table>
</div>
}