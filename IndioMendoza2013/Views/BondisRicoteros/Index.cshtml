@using IndioMendoza2013.Modelos
@model FiltroBondisRicoteros

<style type="text/css">

.info 
{
    border: 1px solid;
    margin: 10px 0px;
    padding:10px 5px 10px 50px;
    background-repeat: no-repeat;
    background-position: 10px center;
    color: #9F6000;
    background-color: #FEEFB3;
    background-image: url('info.png');
}
</style>

<script language="javascript" type="text/javascript">

    function frmBondisRicoteros_success() {

    }

    function frmBondisRicoteros_failure(error) {
        alert($(error.response)[1].innerHTML);
    }

    $(function () {

    });
</script>

@using (Ajax.BeginForm("Buscar", "BondisRicoteros", new AjaxOptions
{
    UpdateTargetId = "divResultados",
    InsertionMode = System.Web.Mvc.Ajax.InsertionMode.Replace,
    OnSuccess = "frmBondisRicoteros_success",
    OnFailure = "frmBondisRicoteros_failure"
},
new { id = "frmBondisRicoteros" }))
{
    <div style="width:100%; height:100%; min-height: 800px;">
    <table width="100%" cellpadding="5px">
    <tr>
        <td><div class="info">Si queres agregar tu bondi ricotero para ir a Mendoza mandanos un mail a <a href="mailto:bondisricoteros@indiomendoza2013.com.ar">bondisricoteros@indiomendoza2013.com.ar</a></div></td>
    </tr>
    @if (@Session["AccessToken"] != null)
    {
        <tr><td>
        <a href="@Url.Action("Agregar", "BondisRicoteros")">AGREGAR BONDI RICOTERO</a>
        </td></tr>
    }
    <tr>
        <td>
            <div id="divFiltrosBondisRicoteros" style="height:75px;">
                @Html.Partial("FiltrosBondisRicoteros", Model)
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <div id="divResultados">@Html.Action("Buscar", "BondisRicoteros", Model)</div>
        </td>
    </tr>
    </table>
    </div>
}
<div id="modalMensajeEnConstruccion">

</div>